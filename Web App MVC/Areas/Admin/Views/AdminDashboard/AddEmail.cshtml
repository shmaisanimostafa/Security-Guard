@model Shared.Models.PhishingEmail;

<!-- Form to add phishing email -->
<h2 class="mt-3">Add PhishingEmail</h2>
<form asp-action="AddEmail" method="post">

    <div class="form-group">
        <!-- Text input for the email/message to analyze -->
        <div class="w-50 mx-auto my-2">
            <input type="text" id="emailMessage" name="EmailMessage" class="form-control" placeholder="Enter email/message here" required />
        </div>
    </div>

    <div class="form-group">
        <!-- Input for the username of the person performing the scan -->
        <div class="w-50 mx-auto my-2">
            <input type="text" id="userName" name="UserName" class="form-control" placeholder="Enter your username" required />
        </div>
    </div>

    <div class="form-group">
        <!-- Input for predicted class -->
        <div class="w-50 mx-auto my-2">
            <input type="text" id="predictedClass" name="PredictedClass" class="form-control" placeholder="Enter predicted class" required />
        </div>
    </div>

    <div class="form-group">
        <!-- Input for confidence score -->
        <div class="w-50 mx-auto my-2">
            <input type="number" id="confidenceScore" name="ConfidenceScore" class="form-control" placeholder="Enter confidence score" step="0.01" required />
        </div>
    </div>

    <div class="form-group">
        <!-- Input for additional feedback on the prediction -->
        <div class="w-50 mx-auto my-2">
            <textarea id="userFeedback" name="UserFeedback" class="form-control" placeholder="Enter any feedback" rows="3"></textarea>
        </div>
    </div>

    <button class="btn btn-info" type="submit">Add Email</button>
</form>
