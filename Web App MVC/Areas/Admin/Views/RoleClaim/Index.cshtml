@model RoleManagementViewModel
@{
    ViewData["Title"] = "Role and Claims Management";
}

<h1>Role and Claims Management</h1>

<!-- Create New Role Form -->
<h2>Create New Role</h2>
<form method="post" asp-action="CreateRole">
    <div class="form-group">
        <label for="newRoleName">Role Name</label>
        <input type="text" class="form-control" id="newRoleName" name="newRoleName" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Create Role</button>
</form>

<!-- Delete Role Form -->
<h2>Delete Role</h2>
<form method="post" asp-action="DeleteRole">
    <div class="form-group">
        <label for="deleteRoleName">Role Name</label>
        <select class="form-select" id="deleteRoleName" name="roleName" required>
            <option value="">Select Role</option>
            @foreach (var role in Model.RolesWithClaims.Select(rc => rc.Role).Distinct())
            {
                <option value="@role.Name">@role.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-danger mt-2">Delete Role</button>
</form>

<!-- Add Claim to Role Form -->
<h2>Add Claim to Role</h2>
<form method="post" asp-action="AddClaimToRole">
    <div class="form-group">
        <label for="claimRoleName">Role Name</label>
        <select class="form-select" id="claimRoleName" name="roleName" required>
            <option value="">Select Role</option>
            @foreach (var role in Model.RolesWithClaims.Select(rc => rc.Role).Distinct())
            {
                <option value="@role.Name">@role.Name</option>
            }
        </select>
    </div>
    <div class="form-group mt-2">
        <label for="claimType">Claim Type</label>
        <input type="text" class="form-control" id="claimType" name="claimType" required />
    </div>
    <div class="form-group mt-2">
        <label for="claimValue">Claim Value</label>
        <input type="text" class="form-control" id="claimValue" name="claimValue" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add Claim</button>
</form>

<!-- Remove Claim from Role Form -->
<h2>Remove Claim from Role</h2>
<form method="post" asp-action="RemoveClaimFromRole">
    <div class="form-group">
        <label for="removeClaimRoleName">Role Name</label>
        <select class="form-select" id="removeClaimRoleName" name="roleName" required>
            <option value="">Select Role</option>
            @foreach (var role in Model.RolesWithClaims.Select(rc => rc.Role).Distinct())
            {
                <option value="@role.Name">@role.Name</option>
            }
        </select>
    </div>
    <div class="form-group mt-2">
        <label for="removeClaimType">Claim Type</label>
        <input type="text" class="form-control" id="removeClaimType" name="claimType" required />
    </div>
    <div class="form-group mt-2">
        <label for="removeClaimValue">Claim Value</label>
        <input type="text" class="form-control" id="removeClaimValue" name="claimValue" required />
    </div>
    <button type="submit" class="btn btn-danger mt-2">Remove Claim</button>
</form>

<!-- Display Current Roles and Claims -->
<h2>Current Roles and Claims</h2>
<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Claims</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var roleClaims in Model.RolesWithClaims)
        {
            <tr>
                <td>@roleClaims.Role.Name</td>
                <td>
                    <ul>
                        @foreach (var claim in roleClaims.Claims)
                        {
                            <li>@claim.ClaimType: @claim.ClaimValue</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Back to Dashboard Button -->
<a href="@Url.Action("Index", "Dashboard")" class="btn btn-secondary mt-4">Back to Dashboard</a>
