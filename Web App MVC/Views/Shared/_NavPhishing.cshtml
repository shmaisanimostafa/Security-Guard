
<lord-icon src="https://cdn.lordicon.com/pndmwyxu.json"
           trigger="hover"
           stroke="bold"
           colors="primary:#121331,secondary:#ffffff,tertiary:#e8e230"
           style="width:150px;height:150px">
</lord-icon>
<form method="post" action="/Prediction/Predict">
    <div class="form-group">
        <!-- Text input for the email/message to analyze -->
        <div class="w-50 mx-auto my-2">
            <input type="text" id="text" name="text" class="form-control" placeholder="Enter text here" required />
        </div>
    </div>

    <div class="form-group">
        <!-- Input for the username of the person performing the scan -->
        <div class="w-50 mx-auto my-2">
            <input type="text" id="userName" name="userName" class="form-control" placeholder="Enter your username" required />
        </div>
    </div>

    <div class="form-group">
        <!-- Input for additional feedback on the prediction -->
        <div class="w-50 mx-auto my-2">
            <textarea id="userFeedback" name="userFeedback" class="form-control" placeholder="Enter any feedback" rows="3"></textarea>
        </div>
    </div>

    <button class="btn btn-info" type="submit">Analyze Text using AI</button>
</form>
