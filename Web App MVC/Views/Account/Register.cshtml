@using Security_Guard.Models.AccountManagement
@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class=" align-items-center py-4 bg-warning-subtle rounded">
    <div class="text-center">
        <img class="mx-auto img-fluid " src="~/Logo.png" width="80" />
    </div>
    <h1 class=" text-center text-warning">Security Guard Registration Form</h1>
<div asp-validation-summary="All" class="text-danger"></div>
    <form method="post" asp-action="Register" class="w-100 m-auto">
    <div class="row">
        <div class="col m-3 ">
            <label class="col-form-label text-warning">First Name</label>
            <input asp-for="FirstName" class="form-control">
        </div>
        <div class="col m-3 ">
            <label class="col-form-label text-warning">Last Name</label>
            <input asp-for="LastName" class="form-control">
        </div>
    </div>
        <div class="text-center m-3">
            <label class="form-label text-warning col-md-2">UserName</label>
        
            <input asp-for="Username" class="form-control" />
        
    </div>
        <div class="m-3 ">
            <label for="InputEmail1" class="form-label text-warning">Email address</label>
            <input type="email" class="form-control" placeholder="10120082@mu.edu.lb" id="InputEmail1" asp-for="Email">
            <div class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="m-3 ">
            <label for="InpuImage" class="form-label text-warning">ImageURL</label>
            <input type="url" class="form-control" placeholder="Image Link" id="InputImage" asp-for="ImageURL">
        </div>

        <div class="row">
            <div class="col m-3 mt-0">
                <label class="col-form-label text-warning">Password</label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <div class="col m-3 mt-0">
                <label class="col-form-label text-warning">Confirm Password</label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" />
            </div>
        </div>


<div class="text-center">
    <div class="row">
        <div class="col ">
            <button type="submit" class="btn btn-warning">
                Register
            </button>
            <a asp-action="Index" asp-controller="Home"
               class="btn btn-outline-warning">Cancel</a>
        </div>
    </div>
    <div class="row">
        <div class="col ">
            Already registered? <a class="text-warning" asp-action="LogIn">Log In</a>
        </div>
    </div>
</div>
</form>


