                                    <td>@File.FileName</td>
                                    <td>@File.UserName</td>
                                    <td>@File.URL</td>
                                </tr>
                              }

                            foreach (var File in Model)
                            {
                                <tr>
                                    <td>#</td>
                                    <td>@File.Id</td>
                                    <td>@File.FileName</td>
                                    <td>@File.UserName</td>
                                    <td>@File.URL</td>
                                </tr>
                              }
                            }
                        
                    </tbody>
                </table>
            </div>
            <div id="Links" class="table-responsive small tabcontent">
                <table class="table table-striped table-hover table-sm">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Id</th>
                            <th scope="col">Link</th>
                            <th scope="col">UserName</th>
                            <th scope="col">URL</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var File in Model)
                            {
                                <tr>
                                    <td>#</td>
                                    <td>@File.Id</td>
                                    <td>@File.FileName</td>
