@{
    ViewData["Title"] = "Welcome Page";
}


<div class="px-4 pt-5 my-5 text-center border-bottom">
    <h1 class="display-4 fw-bold text-body-emphasis">Welcome to Security Guard</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead mb-4">The place where you can browse and integrate SAFELY</p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">
            <a class="btn btn-outline-info btn-lg px-4 me-sm-3">Scan</a>
            <a class="btn btn-warning btn-lg px-4">SignUp</a>
        </div>
    </div>
    <div class="overflow-hidden" style="max-height: 40vh;">
        <div class="container px-5">
            <img src="~/Logo.png" class="img-fluid border rounded-3 shadow-lg mb-4" alt="Example image" width="450" height="500" loading="lazy">
        </div>
    </div>
</div>