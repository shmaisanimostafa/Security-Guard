
@using Security_Guard.Models.AccountManagement
@model ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}
<h2 class="mt-3">Change Password</h2>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="ChangePassword">
    <div class="col m-3 mt-0">
        <label class="col-form-label text-warning">
        Username:
    </label>
    <div class="col-md-4">
        <input asp-for="Username" class="form-control" readonly />
    </div>
    </div>
    <div class="col m-3 mt-0">
        <label class="col-form-label text-warning">
            Old Password
            </label>
        <input type="password" asp-for="OldPassword" class="form-control" autocomplete="new-password" />
    </div>
    <div class="col m-3 mt-0">
        <label class="col-form-label text-warning">
            New Password
            </label>
        <input type="password" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="col m-3 mt-0">
        <label class="col-form-label text-warning">
            Confirm Password

        </label>
        <input type="password" asp-for="ConfirmPassword" class="form-control" />
    </div>
    <div class="row">
            <div class="col offset-md-2">
                <button type="submit" class="btn btn-warning">
                    Submit
                </button>
                <a asp-action="Index" asp-controller="Home"
                   class="btn btn-outline-warning">Cancel</a>
            </div>
    </div>

</form>