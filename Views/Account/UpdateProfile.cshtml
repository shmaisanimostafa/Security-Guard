@model Security_Guard.Models.AccountManagement.UserProfileViewModel
@{
    ViewBag.Title = "Update Profile";
}

<div class="align-items-center py-4 bg-warning-subtle rounded">
    <div class="text-center">
        <img class="mx-auto img-fluid" src="~/Logo.png" width="80" />
    </div>
    <h1 class="text-center text-warning">Update Profile</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post" asp-action="UpdateProfile" class="w-100 m-auto">
        <div class="row">
            <div class="col m-3">
                <label class="col-form-label text-warning">First Name</label>
                <input asp-for="FirstName" class="form-control" value="@Model.FirstName">
            </div>
            <div class="col m-3">
                <label class="col-form-label text-warning">Last Name</label>
                <input asp-for="LastName" class="form-control" value="@Model.LastName">
            </div>
        </div>
        <div class="text-center m-3">
            <label class="form-label text-warning col-md-2">Username</label>
            <input asp-for="Username" class="form-control" readonly value="@Model.Username">
        </div>
        <div class="m-3">
            
            <div class="form-text">Email cannot be changed.</div>
        </div>
        <div class="m-3">
            <label for="InputImage" class="form-label text-warning">ImgURL</label>
            <input type="url" class="form-control" id="InputImage" asp-for="ImgURL" value="@Model.ImgURL">
        </div>

        <div class="text-center">
            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-warning">
                        Update Profile
                    </button>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-warning">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>
